<Window x:Class="qaImageViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:qaImageViewer"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200
        ">

    <Grid>
        <TabControl AutomationProperties.Name="TabControl_MainNavigation" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="View">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="21*"/>
                        <ColumnDefinition Width="15*"/>
                        <ColumnDefinition Width="77*"/>
                        <ColumnDefinition Width="1081*"/>
                    </Grid.ColumnDefinitions>
                    <Image HorizontalAlignment="Left" Height="522" Margin="46,136,0,0" VerticalAlignment="Top" Width="679" Grid.Column="3"/>
                    <ListView Margin="792,165,45,150" Grid.Column="3">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button Content="+" HorizontalAlignment="Left" Margin="1014,136,0,0" VerticalAlignment="Top" Height="24" Width="28" Grid.Column="3"/>

                </Grid>
            </TabItem>
            <TabItem Header="Mapping Profiles" AutomationProperties.Name="TabItem_ImportProfiles">
                <Grid Background="#FFE5E5E5" AutomationProperties.Name="TabContainer_ImportProfiles">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="38*"/>
                        <ColumnDefinition Width="559*"/>
                    </Grid.ColumnDefinitions>
                    <Rectangle HorizontalAlignment="Left" Height="667" Margin="20,30,0,0" Stroke="Black" VerticalAlignment="Top" Width="470" Grid.ColumnSpan="2"/>
                    <DataGrid x:Name="DataGrid_ImportColumnMappingsEdit" AutoGenerateColumns="False" Margin="60,81,746,77" GridLinesVisibility="All" AutomationProperties.Name="DataGrid_ImportColumnMappingsEdit" CanUserAddRows="False" CanUserDeleteRows="False" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" ColumnWidth="*"/>
                    <Button x:Name="Button_AddColumnMapping" Content="+Row" HorizontalAlignment="Left" Margin="321,46,0,0" VerticalAlignment="Top" AutomationProperties.Name="Button_AddColumnMapping" Width="51" Grid.Column="1" Click="Button_AddColumnMapping_Click"/>
                    <ComboBox x:Name="ComboBox_ImportProfilesSelector" Text="--Select Profile--" IsEditable="True" HorizontalAlignment="Left" Margin="38,43,0,0" VerticalAlignment="Top" Width="182" SelectionChanged="ComboBox_ImportProfilesSelector_SelectionChanged" KeyUp="ComboBox_ImportProfilesSelector_KeyUp" IsTextSearchEnabled="False" Height="26" Grid.ColumnSpan="2"/>
                    <Button x:Name="Button_SaveImportProfile" Content="+" Grid.Column="1" IsEnabled="False" HorizontalAlignment="Left" Margin="144,43,0,0" VerticalAlignment="Top" Click="Button_SaveImportProfile_Click" Height="26" Width="22"/>
                    <DataGrid x:Name="DataGrid_ImportColumnMappingsView" Margin="60,81,746,77" GridLinesVisibility="All" AutomationProperties.Name="Table_ColumnMappings" IsReadOnly="True" Grid.ColumnSpan="2" />
                    <Rectangle HorizontalAlignment="Left" Height="667" Margin="624,30,0,0" Stroke="Black" VerticalAlignment="Top" Width="470" Grid.Column="1"/>
                    <DataGrid x:Name="DataGrid_ExportColumnMappingsEdit" Margin="665,81,65,77" Grid.Column="1" CanUserAddRows="False" CanUserDeleteRows="False" AutoGenerateColumns="False" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" ColumnWidth="*"/>
                    <Label Content="Export Mapping" Grid.Column="1" HorizontalAlignment="Left" Margin="648,41,0,0" VerticalAlignment="Top" Height="34" Width="109" FontSize="14"/>
                </Grid>
            </TabItem>
            <TabItem Header="Import" HorizontalAlignment="Left" Margin="-2,-2,0,0" Width="52">
                <Grid Background="#FFE5E5E5">
                    <Rectangle HorizontalAlignment="Left" Height="211" Margin="367,16,0,0" Stroke="Black" VerticalAlignment="Top" Width="369"/>
                    <ComboBox x:Name="ComboBox_MappingProfilesSelector" HorizontalAlignment="Left" Margin="99,50,0,0" VerticalAlignment="Top" Width="217"/>
                    <DataGrid x:Name="DataGrid_PreviousImportResults" Margin="411,50,474,555" CanUserAddRows="False" CanUserDeleteRows="False" AutoGenerateColumns="False" HorizontalContentAlignment="Stretch" ColumnWidth="*" IsReadOnly="True"/>
                    <Label Content="Previous Imports" HorizontalAlignment="Left" Margin="380,16,0,0" VerticalAlignment="Top" Height="34" Width="141" FontSize="14"/>
                    <TextBox x:Name="TextBox_ExcelTargetFile" HorizontalAlignment="Left" Margin="117,138,0,0" Text="--Choose File--" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <Button x:Name="Button_SelectExcelTargetFile" Content="Choose" HorizontalAlignment="Left" Margin="242,138,0,0" VerticalAlignment="Top" Click="Button_SelectExcelTargetFile_Click"/>
                    <Rectangle HorizontalAlignment="Left" Height="367" Margin="133,238,0,0" Stroke="Black" VerticalAlignment="Top" Width="970"/>
                    <Label x:Name="Label_ExcelPreviewDataLoaded" Content="Data loaded" HorizontalAlignment="Left" Margin="610,522,0,0" VerticalAlignment="Top" Width="110" FontSize="18" />
                    <DataGrid x:Name="DataGrid_ExcelPreview" Margin="336,260,128,173" CanUserAddRows="False" CanUserDeleteRows="False" AutoGenerateColumns="False" HorizontalContentAlignment="Stretch" ColumnWidth="*" IsReadOnly="True"/>
                    <ProgressBar x:Name="ProgressBar_LoadingExcelPreview" HorizontalAlignment="Left" Height="44" Margin="485,408,0,0" VerticalAlignment="Top" Width="444"/>
                    <Label x:Name="Label_LoadingExcelPreview" Content="..... loading preview" HorizontalAlignment="Left" Margin="822,452,0,0" VerticalAlignment="Top" Width="117"/>
                    <Label x:Name="Label_UnableToLoadExcelPreview" Content="Unable to load preview" HorizontalAlignment="Left" Margin="610,413,0,0" VerticalAlignment="Top" Width="194" FontSize="18" />
                    <ListBox x:Name="ListBox_ExcelPreviewSheets" Margin="167,260,835,173" SelectionChanged="ListBox_ExcelPreviewSheets_SelectionChanged"/>
                    <Button x:Name="Button_RunExcelImport" Content="Import" HorizontalAlignment="Left" Margin="225,177,0,0" VerticalAlignment="Top" Click="Button_RunExcelImport_Click"/>
                    <ProgressBar x:Name="ProgressBar_ExcelImportItemsTask" HorizontalAlignment="Left" Height="35" Margin="796,78,0,0" VerticalAlignment="Top" Width="158"/>
                    <Label x:Name="Label_ExcelWorkbookName" Content="--Select File--" HorizontalAlignment="Left" Margin="161,234,0,0" VerticalAlignment="Top" Width="198"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
