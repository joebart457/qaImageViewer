<Window x:Class="qaImageViewer.AddAttributeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:qaImageViewer"
        mc:Ignorable="d"
        Title="Add Attribute" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner">
    <Grid Height="135" Width="343">
        <GroupBox Header="Attribute Name" Margin="10,10,10,52">
            <TextBox x:Name="TextBox_AttributeName" HorizontalAlignment="Left" Margin="10,0,0,0" Text="--name--" TextWrapping="Wrap" VerticalAlignment="Center" Width="293" TextChanged="TextBox_AttributeName_TextChanged"/>
        </GroupBox>
        <Button x:Name="Button_Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="172,97,0,0" VerticalAlignment="Top" Width="60" Click="Button_Cancel_Click"/>
        <Button x:Name="Button_Add" Content="Add" IsEnabled="False" HorizontalAlignment="Left" Margin="272,97,0,0" VerticalAlignment="Top" Width="61" Click="Button_Add_Click"/>


    </Grid>
</Window>
